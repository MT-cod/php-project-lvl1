{
    "name": "hexlet/code",
    "authors": [
        {
            "name": "MT-cod",
            "email": "mammmoth@list.ru"
        }
    ],
    "bin": [
        "bin/brain-games"
    ],
    "description": "hexlet php-package",
    "license": "MIT",
    "require": {
        "wp-cli/php-cli-tools": "^0.11.11",
        "squizlabs/php_codesniffer": "2.0.*"
    },
    "autoload": {
        "files": [
          "src/Cli.php"
        ]
    },
    "scripts": {
        "code-sniffer": [
            "./vendor/bin/phpcs --config-set default_standard phpcs.xml",
            "./vendor/bin/phpcs --config-set colors 1"
        ],
        "post-install-cmd": [
            "@code-sniffer"
        ],
        "post-update-cmd": [
            "@code-sniffer"
        ],
        "phpcs": [
            "./vendor/bin/phpcs"
        ]
    }
}
